
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Apply</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ApplyForJob</h4>
        <div>
            @{
                if (ViewBag.Result != null)
                {
                    <h3>@ViewBag.Result</h3>
                }
            }
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
}
<div class="col-md-3" style="margin-left:420px;margin-bottom:50px">
    <a href="@Url.Action("GetJobsByUser", "Home2")" class="btn btn-primary btn-block">
        <i class="fa fa-arrow-circle-left"></i>Edit Your Request Here!
    </a>
</div>


<div class="col-md-3" style="margin-left:420px;margin-bottom:50px"">
    <a href="@Url.Action("Index", "Home2")" class="btn btn-success btn-block">
        <i class="fa fa-arrow-circle-left"></i>Back to List
    </a>
</div>
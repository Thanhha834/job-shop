@model JobShop.Models.Job
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Details of Job</h2>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.categoryName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Category.categoryName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.jobTitle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.jobTitle)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.jobContent)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.jobContent)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.jobImage)
        </dt>
        <dd>
            <img src="~/uploads/@Html.DisplayFor(Model=>Model.jobImage)"
                 class="thumbnail" style="width:128px; height:128px" />
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Apply this job", "Apply", new { id = Model.id }, new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
</p>
